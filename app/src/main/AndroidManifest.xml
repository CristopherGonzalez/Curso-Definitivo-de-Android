<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aysenti.tiapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icons8_anonymous_mask_48"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icons8_anonymous_mask_48"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ContainerActivity" />
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.RegisterAccountActivity"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>